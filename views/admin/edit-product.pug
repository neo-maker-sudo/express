extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/product_page.css")
block content
    main
    if editing
        form.form1(action="/admin/edit-product",method="POST")
            .div1
                label(for="title") Content
                if editing 
                    input#title(type="text",name="title" value=product.title)
            .div1
                label(for="imageUrl") ImageUrl
                if editing
                    input#imageUrl(type="text",name="imageUrl" value=product.imageUrl)
            .div1
                label(for="price") price
                if editing
                    input#price(type="number",name="price" step="0.01" value=product.price)
            .div1
                label(for="description") Description
                if editing
                    textarea#description(name="description", rows="5" ) #{product.description} 
                    button(type="submit",id="btn01") Update Product
                if editing
                    input(type="hidden" name="productId" value=product._id) 
    else
        form.form1(action="/admin/product",method="POST")
            .div1
                label(for="title") Content
                input#title(type="text",name="title")
            .div1
                label(for="imageUrl") ImageUrl
                input#imageUrl(type="text",name="imageUrl")
            .div1
                label(for="price") price
                input#price(type="number",name="price" step="0.01")
            .div1
                label(for="description") Description
                textarea#description(name="description", rows="5")
                button(type="submit",id="btn01") Add Product
