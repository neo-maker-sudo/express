extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/main.css")
block content
    main
        if errorMessage 
            .user-message.user-message--error #{errorMessage}
        form.login-form(action="/login",method="POST" novalidate)
            .form-control
                label(for="email") E-Mail
                input#title(
                        class=validationError.find(e=>e.param === 'email') ? 'invalid' : ''
                        type="email"
                        name="email"
                        value=oldput.email
                    )
            .form-control
                label(for="password") Password
                input#imageUrl(
                        class=validationError.find(e=>e.param === 'password') ? 'invalid' : ''
                        type="password"
                        name="password"
                        value=oldput.password
                    )
            button.btn(type="submit",id="btn01") Login
            input(type="hidden" name="_csrf" value=csrfToken)
        div
            a.reset(href="/reset") Reset Password