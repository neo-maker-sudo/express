block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/main.css")
block content
    main
        form.login-form(action="/login",method="POST")
            .form-control
                label(for="email") E-Mail
                input#title(type="email",name="email")
            .form-control
                label(for="password") Password
                input#imageUrl(type="password",name="password")
            button.btn(type="submit",id="btn01") Login