extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/main.css")
block content
    main
        if orders.length <= 0
            h1 Nothing Here !
        else
            ul
                each order in orders
                    li
                        h1 #{order._id}
                            a.abc(href="/order/"+order._id) - invoice
                        ul
                            each p in order.products
                                li #{p.product.title} (#{p.quantity}) 
                                
                                
                                